<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
             />

        <TextView
            android:id="@+id/UserOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:text="Utilisateur 1"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/UserOneScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:text="0"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/TimeViewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="TEMPS RESTANT"
            android:textSize="7dp"
            android:textColor="#1976d2" />

        <TextView
            android:id="@+id/TimeRemainingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="10"
            android:textColor="#1976d2"
            android:textSize="22dp" />


        <TextView
            android:id="@+id/UserTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:text="Utilisateur 2"
            android:textColor="#fff" />
        <TextView
            android:id="@+id/UserTwoScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:layout_marginRight="50dp"
            android:text="0"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/Question"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="70dp"
            android:layout_marginRight="0dp"
            android:textColor="#fff"
            android:textSize="35dp"
            android:gravity="center"
            android:text="Quel technologie permet de se connecter a un rÃ©seau sans fil ?" />

        <Button
            android:id="@+id/buttonOne"
            android:layout_width="390dp"
            android:layout_height="75dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="250dp"
            android:background="#fff"
            android:text="GSM" />

        <Button
            android:id="@+id/buttonTwo"
            android:layout_width="390dp"
            android:layout_height="75dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="335dp"
            android:background="#fff"
            android:text="infrarouge" />

        <Button
            android:id="@+id/buttonThree"
            android:layout_width="390dp"
            android:layout_height="75dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="420dp"
            android:background="#fff"
            android:text="Bluetooth" />

        <Button
            android:id="@+id/buttonFour"
            android:layout_width="390dp"
            android:layout_height="75dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="505dp"
            android:background="#fff"
            android:text="Wifi" />

        <ImageView
            android:id="@+id/imageUserOne"
            android:layout_width="41dp"
            android:layout_height="33dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            tools:ignore="MissingConstraints"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageUserTwo"
            android:layout_width="41dp"
            android:layout_height="33dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            tools:ignore="MissingConstraints"
            tools:srcCompat="@tools:sample/avatars" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>